# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Web Search Configuration (fallback when local knowledge is insufficient)
WEB_SEARCH=true
WEB_SEARCH_CONTEXT_SIZE=high
SIMILARITY_THRESHOLD_FOR_WEB_SEARCH=0.3

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=polkadot_embeddings

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Chunk Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7
SEARCH_ONCHAIN_DATA=true

# Data Sources Configuration
STATIC_DATA_SOURCE=data/data_sources/static_data
DYNAMIC_DATA_SOURCE=data/data_sources/onchain_data 