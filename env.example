# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Web Search Configuration (fallback when local knowledge is insufficient)
WEB_SEARCH=true
WEB_SEARCH_CONTEXT_SIZE=high
SIMILARITY_THRESHOLD_FOR_WEB_SEARCH=0.3

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=polkadot_embeddings

# Mem0 Memory Configuration (optional - for conversation memory)
USE_MEM0=true
MEM0_API_KEY=your_mem0_api_key_here

# Redis Rate Limiting Configuration (optional - for request rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
RATE_LIMIT_MAX_REQUESTS=20
RATE_LIMIT_EXPIRE_SECONDS=3600

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Chunk Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7 