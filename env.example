# OpenAI Configuration
# Set your OpenAI API key and models
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Web Search Configuration (fallback when local knowledge is insufficient)
WEB_SEARCH=true
WEB_SEARCH_CONTEXT_SIZE=high
SIMILARITY_THRESHOLD_FOR_WEB_SEARCH=0.3

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=polkadot_embeddings
CHROMA_DYNAMIC_COLLECTION_NAME=polkadot_embeddings_dynamic

# Mem0 Memory Configuration (optional - for conversation memory)
USE_MEM0=false
MEM0_API_KEY=

# Redis Rate Limiting Configuration (optional - for request rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
RATE_LIMIT_MAX_REQUESTS=20
RATE_LIMIT_EXPIRE_SECONDS=3600

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TIMEOUT=10

# Chunk Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# Safety Settings
MAX_QUERY_LENGTH=500
ENABLE_OFFENSIVE_FILTER=true

# Authentication Configuration
ENABLE_AUTHENTICATION=true
POLKASSEMBLY_AI_TOKEN=

# SQL Model Configuration
SQL_MODEL=chatgpt
# Options: chatgpt (uses GPT-4) or gemini (uses Gemini 2.5 Pro)
# If chatgpt: OpenAI is primary, Gemini is fallback
# If gemini: Gemini is primary, OpenAI is fallback

# Gemini Model Configuration (for general tasks like routing, natural language generation)
GEMINI_API_KEY=
GEMINI_MODEL_NAME=gemini-1.5-pro
GEMINI_TIMEOUT=30

# Gemini SQL Model Configuration (for SQL query generation - use Pro model)
GEMINI_MODEL_SQL=gemini-2.5-pro

# Tavily (optional)
TAVILY_API_KEY=

# Base paths and data sources (do not expose absolute paths)
BASE_PATH=
STATIC_DATA_PATH=
DYNAMIC_DATA_PATH=
ONCHAIN_DATA_DIR=
VOTING_DATA_DIR=
JOINED_OUTPUT_DIR=

# File paths used by metadata and vote tools
COMBINED_STATIC_PATH=
COMBINED_DYNAMIC_PATH=
VOTING_CSV_FILE=
VOTE_SCHEMA_PATH=

# PostgreSQL (governance data)
POSTGRES_HOST=
POSTGRES_PORT=5432
POSTGRES_DATABASE=
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_TABLE_NAME=governance_data
POSTGRES_SCHEMA_PATH=
POSTGRES_DROP_EXISTING=false

# PostgreSQL (voting data)
POSTGRES_HOST_PA=
POSTGRES_PORT_PA=5432
POSTGRES_DATABASE_PA=
POSTGRES_USER_PA=
POSTGRES_PASSWORD_PA=
POSTGRES_SCHEMA_VOTE_PATH=

# Slack notifications
SLACK_WEBHOOK_URL=
